{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!
{% endblock %}

{% block body %}
	{% if articles %}
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Article Title</th>
					<th>Article Body</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{article.title}}</td>
						<td>{{article.body}}</td>
						<td>
							<a href="index.php/article/{{article.id}}" class="btn btn-dark">Show</a>
							{# tuts/symfony-test/public/index.php/article/1 #}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>No article found</p>
	{% endif %}
{% endblock %}
